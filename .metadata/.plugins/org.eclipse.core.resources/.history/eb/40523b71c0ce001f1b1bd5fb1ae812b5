
public class Player {
	public String name;
	public int score;
	public int tournyscore; 
	public Player(String n,int s,int ts)
	{
		name=n;
		score=s;
		tournyscore=ts;
	}
	
	//return value is the amount that was taken for tourny purposes
	//only use this function when money is going to a tourny person
	public int scorechange(int amount)
	{
		int temp=tournyscore;
		if(tournyscore >=0)
		{
			if(tournyscore+amount >=0)
			{
				tournyscore=tournyscore+amount;
				return -amount;
			}
			else
			{
				tournyscore=-100;
				System.out.println(name +"was knocked out of the tourny\r\n");
				return temp;
			}
		}
		return 0;
	}
}
